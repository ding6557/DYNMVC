
@model DYN.Model.Role
@{
    Layout = null;
}
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head id="Head1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=EmulateIE9" />
    <title>系统角色设置表单</title>
    <link href="/Themes/Styles/style.css" rel="stylesheet" />
    <script src="/Themes/Scripts/jquery-1.8.2.min.js" type="text/javascript"></script>
    <script src="/Themes/Scripts/Validator/JValidator.js" type="text/javascript"></script>
    <script src="/Themes/Scripts/artDialog/artDialog.source.js" type="text/javascript"></script>
    <script src="/Themes/Scripts/artDialog/iframeTools.source.js" type="text/javascript"></script>
    <link href="/Themes/Scripts/TreeView/jquery.treeview.css" rel="stylesheet" type="text/css" />
    <script src="/Themes/Scripts/TreeView/jquery.treeview.js" type="text/javascript"></script>
    <script src="/Themes/Scripts/FunctionJS.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(function() {
           @Html.Raw(TempData["script"])
        });
        function MySubmit() {
            if (CheckDataValid('#Form1')) {
                $("#Form1").submit();
            } else {
                return false;
            }
        }
    </script>
</head>
<body>
    @using (Html.BeginForm("Add", "Role", new { area = "SysSettingUp" }, FormMethod.Post, new { id = "Form1" }))
    {
        @Html.HiddenFor(m => m.ID);
        @Html.HiddenFor(m => m.QuanXian);
        <table border="0" cellpadding="0" cellspacing="0" class="frm">
            <tr>
                <th>
                    角色名称：
                </th>
                <td>
                    @Html.TextBoxFor(m => m.MingCheng, new
           {
               @id = "Roles_Name",
               @type = "text",
               @class = "txt",
               @datacol = "yes",
               @err = "角色名称",
               @checkexpession = "NotNull",
               @style = "width: 85%"
           })
                </td>
            </tr>
            <tr>
                <th>
                    角色描述：
                </th>
                <td>
                    @Html.TextAreaFor(m => m.BeiZhu, new
                {
                    @id = "Roles_Remark",
                    @class = "txtRemark",
                    @style = "width: 85.5%;height: 170px;"
                })
                </td>
            </tr>
        </table>
        <div class="frmbottom">
            <a id="Save" class="l-btn" onclick="MySubmit()"><span class="l-btn-left"><img src="/Themes/Images/16/accept.png" alt="" />确 认</span></a>
            <a class="l-btn" href="javascript:void(0)" onclick="OpenClose();">
                <span class="l-btn-left">
                    <img src="/Themes/Images/16/cancel.png" alt="" />关 闭
                </span>
            </a>
        </div>
    }
</body>
</html>

